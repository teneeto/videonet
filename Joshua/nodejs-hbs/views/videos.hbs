{{> navbar}}

<div id="wrapper">
  {{> sidenav}}

  <div id="page-content-wrapper">
    <main role="main" class="container align-items-center text-center pt-3 pb-2 my-5">
      <h1 class="mt-4">
        {{pagetitle}}
      </h1>
      <p class="lead">
        {{videoDir}} Library <br>
        # of Videos {{videoList.length}}
      </p>


      <div id="listVideo">
        {{#each videoList}}
        <video controls src="{{path}}" type="video/mp4">
        </video>
        {{!-- <p>{{title}}</p> --}}
        {{/each}}
      </div>

    </main>

  </div> <!--  end of page content wrapper div -->

  {{> footer}}

</div> <!--  end of wrapper div -->