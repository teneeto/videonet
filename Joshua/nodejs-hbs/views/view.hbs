{{> navbar}}

<div id="wrapper">
  {{> sidenav}}

  <div id="page-content-wrapper">
    <main role="main" class="container align-items-center text-center pt-3 pb-2 my-5">
      <h1 class="mt-4">
        {{videoTitle}}
      </h1>
      <p class="lead">
        # of Videos {{videoFiles.length}}
      </p>


      <div id="listVideo">
        {{#each videoFiles}}
        <video controls src="{{this}}" type="video/mp4">
        </video>
        {{/each}}
      </div>
    </main>

  </div> <!--  end of page content wrapper div -->

  {{> footer}}

</div> <!--  end of wrapper div -->