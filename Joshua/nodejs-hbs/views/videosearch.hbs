{{> navbar}}

<div id="wrapper">
  {{> sidenav}}

  <div id="page-content-wrapper">
    <main role="main" class="container align-items-center text-center pt-3 pb-2 my-5">
      <h1 class="mt-4">
        {{pagetitle}}
      </h1>
      <p class="lead">
        Your search result for {{searchInput}} <br>
        # of Videos {{searchList.length}}
      </p>


      <div class="row">
        {{#each searchList}}
        <div class="col-3">

          <video controls src="{{this}}" type="video/mp4">
          </video>
          <p>
            {{this}}
          </p>
        </div>
        {{/each}}
      </div>
    </main>

  </div> <!--  end of page content wrapper div -->

  {{> footer}}

</div> <!--  end of wrapper div -->